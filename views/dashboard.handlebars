<div class="container my-4">
  {{#each posts}}
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        <h3 class="card-title text-center">{{title}}</h3>
        <a href="/dashboard/post/{{id}}"><i
            class="fa-solid fa-pen-to-square"
          ></i></a>
      </div>
      <div class="card-body">
        <p class="card-text">{{content}}</p>
      </div>
      <div class="card-footer">
        <p><strong>Created by: </strong>{{user.username}}
          <strong>Created on: </strong>{{format_date createdAt}}</p>
      </div>
    </div>
  {{/each}}
</div>

<form class="container new-post">
  <div class="card">
    <div class="card-header">
      <h2 class="card-title text-center">Create a new post</h2>

    </div>
    <div class="form-group px-3">
      <label for="post-title">Post Title:</label>
      <input
        type="text"
        class="form-control"
        id="post-title"
        placeholder="Enter post title"
      />
    </div>
    <div class="form-group px-3">
      <label for="post-body">Post:</label>
      <textarea
        type="text"
        class="form-control"
        id="post-body"
        placeholder="Enter new post"
      ></textarea>
    </div>
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-primary w-50">Submit</button>
  </div>
</form>

<script src="/js/new-post.js"></script>